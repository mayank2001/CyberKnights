<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activites.AddCash">


    <LinearLayout
        android:id="@+id/textView13"
        android:layout_width="410dp"
        android:layout_height="235dp"
        android:background="#4682b4"
        android:backgroundTint="#4682b4"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-15dp">


        <TextView
            android:id="@+id/textView14"
            android:layout_width="169dp"
            android:layout_height="50dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="75dp"
            android:layout_marginEnd="100dp"
            android:text="Add Cash"
            android:textColor="#FDFCFC"
            android:textSize="39sp"
            android:textStyle="normal|bold"
            app:layout_constraintStart_toStartOf="@id/imageView2"
            app:layout_constraintTop_toTopOf="@id/imageView2" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="303dp"
            android:layout_height="match_parent"
            android:layout_weight="20"
            app:srcCompat="@drawable/cash" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Spend Type"
        android:textColor="#100F0F"
        android:textSize="27sp"
        tools:layout_editor_absoluteX="135dp"
        tools:layout_editor_absoluteY="222dp" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Category"
        android:textColor="#050505"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="31dp"
        tools:layout_editor_absoluteY="276dp" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="580dp" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Amount"
        android:inputType="number"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="316dp" />

    <EditText
        android:id="@+id/editTextDate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="434dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_continue"
        android:text="+ Add Now"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="170dp"
        tools:layout_editor_absoluteY="604dp" />

    <!-- <ImageView
         android:id="@+id/imageView2"
         android:layout_width="138dp"
         android:layout_height="93dp"
         />-->


</androidx.constraintlayout.widget.ConstraintLayout>