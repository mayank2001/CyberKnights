<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:padding="20dp"
        android:background="#4682b4">
        <ImageView
            android:id="@+id/Profile_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/rts"
            android:layout_centerVertical="true"/>
       <TextView
           android:id="@+id/name"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Mayank Joshi"
           android:textSize="20sp"
           android:fontFamily="sans-serif"
           android:textColor="#ffffff"
           android:textStyle="bold"
           android:layout_toRightOf="@+id/Profile_img"
           android:layout_centerVertical="true"
           android:includeFontPadding="false"
           android:layout_marginLeft="10dp"
           />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mayank_joshi"
            android:includeFontPadding="false"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/Profile_img"
            android:layout_below="@+id/name"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#4682b4"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/reloadd"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/balance_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="$500"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif"
                    android:layout_centerInParent="true"/>

                <TextView
                android:id="@+id/balance_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance"
                android:includeFontPadding="false"
                android:textSize="14sp"
                android:layout_below="@+id/balance_label"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            app:cardBackgroundColor="#4682b4"
            app:cardElevation="10dp"
            android:layout_margin="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/transaction"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/transaction_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:text="15"
                    android:textSize="22sp"
                    android:fontFamily="sans-serif"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/transaction_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transactions"
                    android:includeFontPadding="false"
                    android:textSize="20sp"
                    android:layout_below="@+id/transaction_label"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>

</LinearLayout>